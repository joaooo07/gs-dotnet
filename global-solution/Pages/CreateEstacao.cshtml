@page
@model global_solution.Pages.CreateEstacaoModel
@{
    ViewData["Title"] = "Cadastrar Fazenda para Monitoramento";
}

<h2 class="mt-4 mb-3">📡 Cadastro de Fazenda para Monitoramento</h2>
<p class="text-muted mb-4">
    Preencha os dados abaixo para adicionar uma nova Fazenda de monitoramento climático.
</p>

<div class="card shadow p-4">
    <form method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Estacao.Nome" class="form-label">Nome da Estação</label>
            <input asp-for="Estacao.Nome" class="form-control" placeholder="Ex: Fazenda São João" />
            <span asp-validation-for="Estacao.Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Estacao.Localizacao" class="form-label">Localização</label>
            <input asp-for="Estacao.Localizacao" class="form-control" placeholder="Ex: Zona Rural - MG" />
            <span asp-validation-for="Estacao.Localizacao" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Cadastrar Fazenda</button>
    </form>

    @if (Model.Sucesso)
    {
        <div class="alert alert-success mt-4">
            Fazenda cadastrada com sucesso!
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
